# Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Application Configuration
NODE_ENV=production
PORT=3001
APP_VERSION=1.0.0
FRONTEND_URL=https://yourdomain.com
MERCHANT_SUPPORT_EMAIL=support@yourdomain.com

# Database Configuration (Production)
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public&sslmode=require"

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Square Payment Configuration (Production)
SQUARE_ACCESS_TOKEN=your-production-access-token
SQUARE_APPLICATION_ID=your-application-id
SQUARE_LOCATION_ID=your-location-id
SQUARE_ENVIRONMENT=production
SQUARE_WEBHOOK_SIGNATURE_KEY=your-webhook-signature-key

# Cloudinary Configuration (Production)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Payment Pricing Configuration (CAD)
PRICE_CONSULTATION_MIN=185
PRICE_DRAWING_CONSULTATION_MIN=120
PRICE_TATTOO_DEPOSIT_MIN=150
PRICE_TATTOO_FINAL_MIN=185
PAYMENT_CURRENCY=CAD

# Security Configuration
# Generate secure random strings for production
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-chars
SESSION_SECRET=your-super-secure-session-secret-at-least-32-chars

# Optional: Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# IMPORTANT PRODUCTION NOTES:
# 1. Never commit this file with real values to version control
# 2. All secrets should be generated using cryptographically secure methods
# 3. Database should use SSL connections in production
# 4. Ensure HTTPS is enforced for all endpoints
# 5. Set up proper backup strategies for your database
# 6. Configure monitoring and alerting for your application 